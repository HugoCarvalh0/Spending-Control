datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  expenses  Expense[]
  createdAt DateTime  @default(now())
}

model Expense {
  id        Int       @id @default(autoincrement())
  title     String
  amount    Float
  type      String    // "receita" ou "despesa"
  category  String
  date      DateTime
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
}
